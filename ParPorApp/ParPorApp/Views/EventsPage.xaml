<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParPorApp.Views.EventsPage">
    <StackLayout>
        <StackLayout Orientation="Horizontal"/>
        <ListView x:Name="eventsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Padding="20">
                                <Image Source="logo" 
                                       WidthRequest="100"
                                       HeightRequest="100"/>
                                <Label Text="{Binding Id}" TextColor="Black" FontAttributes="Bold" FontSize="Medium"/>
                                <Label Text="{Binding StartDateTime}" TextColor="Black"/>
                                <Label Text="{Binding LocationId}" TextColor="Black" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>